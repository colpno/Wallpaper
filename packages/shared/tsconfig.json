{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",

    "outDir": "dist",
    "declaration": true,
    "moduleResolution": "Node",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "erasableSyntaxOnly": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
